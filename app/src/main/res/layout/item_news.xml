<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/vienvuongtrang"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/hinh_nen_trang_10_263x263"
        android:id="@+id/item_news_image"
        android:scaleType="fitXY"
        android:padding="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_txtname"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Tên Bản tin"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_txttime"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Thời gian"
        android:textColor="@color/black"
        android:textSize="18sp"/>
</LinearLayout>